func (h *Handler) RegisterHandlers(e *echo.Echo, middleware echo.MiddlewareFunc) {
    {{- range .Methods }}
    e.POST("/{{ .GetPath }}", h.{{ .Name }}, middleware)
    {{- end }}
}

